<section class="padded section-full-size profile-section">
    <h2>Statistics</h2>
    <hr />
    <ul style="list-style-type: none; font-size: x-large; ">
        <li> <span class="fas fa fa-play" style="padding: 10px;"></span> Games played: {{gamesPlayed}} </li>
        <li> <span class="fas fa fa-trophy" style="padding: 10px;"></span>Games won: {{gamesWon}} ({{{getPercent gamesWon gamesPlayed}}} %)</li>
    </ul>

    <h2>Achievements</h2>
    <hr />

    {{#each unlockedAchievements}}
        <div class="achievement-item">
            <span class="fa fa-{{iconName}} achievement-icon icon-bg-blue"></span>
            <div class="achievement-text">
                <h4> {{title}} </h4>
                <p> {{description}} </p>
            </div>
            <div class="achievement-date"> {{toLocaleString unlockedAt}} </div>
            <div style="clear: left;"></div>
        </div>
    {{/each}}

    <p> </p>
    <a class="styled-link" href="/profile/achievements"> View all achievements </a>
</section>